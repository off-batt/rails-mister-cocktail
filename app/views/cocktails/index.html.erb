<div class="sticky">
  <div class="header" id="myHeader">
    <div class="title">
      <h1>Glouglou</h1>
    </div>
    <div class="right btn btn-primary">
      <%= link_to "Create", new_cocktail_path(@cocktail) %>
    </div>
  </div>
</div>

<div class="content">
  <% @cocktails.each do |cocktail| %>
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('cl_image_tag cocktail.photo, width: 400 %>');">
      <div class="card-description">
        <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
      </div>
    </div>
  <%end%>
</div>
